{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "baseUrl": "src",
    "paths": {
      "@environments": ["environments"],
      "@app": ["app"],
      "@core": ["app/core"],
      "@shared": ["app/shared"],
      "@auth": ["app/auth"],
      "@dashboard": ["app/dashboard"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
